{
  "manifest_version": 2,
  "name": "Copy Address",
  "description": "mail address copy to clipboard",
  "version": "0.0.1",
  "icons": {
    "24": "icon.svg"
  },
  "permissions": [
    "messagesRead",
    "clipboardWrite",
    "clipboardRead",
    "activeTab",
    "tabs",
    "tabHide"
  ],
  "browser_action": {
    "default_icon": {
      "24": "icon.svg"
    },
    "default_title": "Copy Address",
    "default_area": "maintoolbar"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
