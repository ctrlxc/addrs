{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.1",
  "applications": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "68.0"
    }
  },
  "default_locale": "en",
  "icons": {
    "24": "icon.svg"
  },
  "permissions": [
    "messagesRead",
    "clipboardWrite",
    "activeTab",
    "tabs",
    "tabHide"
  ],
  "browser_action": {
    "default_icon": {
      "24": "icon.svg"
    },
    "default_title": "__MSG_extensionTitle__",
    "default_area": "maintoolbar"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
